<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/forgot/registration.css">
    
    <title>Registration</title>
    <style>
        body{
            background-color:#555657!important;
        }
        nav-bar{
            
        }
    </style>
</head>


<body>
    {{> partial}}
<section class="h-100 bg-dark">
    
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="/images/img.jpg"
                                alt="Sample photo" class="img-fluid"
                                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        
                        <div class="col-xl-6">
                              <div class="back">
                                <a href="/user/log-in"><p  class="back">&lt;Back</p></a>
                            
                        </div>
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase" style="display: flex;justify-content: center;">USER SIGN-UP</h3>
                                {{#if error}}
                                <p id="warning"  style="color:red;align-items: center;">{{error}}</p>
                                {{/if}}
                              
                                <div class="row">
                                    <div class="col-md-6 mb-4 div-height" >
                                        <form action="/user/registration" method="post" onsubmit="return validateForm()">
                                        <div class="form-outline">
                                            <label class="form-label" for="form3Example1m">First name</label>
                                            <input autofocus type="text" id="form3Example1m"
                                                class="form-control form-control-lg" /name="First_name" >
                                            <p style="color:red;align-items: center;" id="first-name"></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4 div-height">
                                        <div class="form-outline">
                                        <label class="form-label" for="form3Example1n">Last name</label>
                                            <input type="text" id="form3Example1n"
                                                class="form-control form-control-lg" name="Last_name" />
                                                <p style="color:red;align-items: center;" id="second-name"></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-outline mb-4 div-height" >
                                    <label class="form-label" for="form3Example8">Email</label>
                                    <input type="text"   id="form3Example8" class="form-control form-control-lg email" name="Email" />
                                    <p style="color:red;align-items: center;" id="Email"></p>
                                </div>
                                <div class="form-outline mb-4 div-height">
                                    <label class="form-label" for="form3Example9">PHONE</label>
                                    <input type="text" id="form3Example9" class="form-control form-control-lg" name="phone"/>
                                    
                                    <p style="color:red;align-items: center;" id="Phone"></p>
                                </div>
                                <div class="form-outline mb-4 div-height">
                                    <label class="form-label" for="form3Example9">Password</label>
                                    <input type="password" id="form3Example10" class="form-control form-control-lg" name="password" />
                                    <p style="color:red;align-items: center;" id="Password"></p>
                                    
                                </div>
                                <div class="form-outline mb-4 div-height">
                                    <label class="form-label" for="form3Example9">Confirm password</label>
                                    <input type="password" id="form3Example11" class="form-control form-control-lg" />
                                    <p style="color:red;align-items: center;" id="Conform-password"></p>
                                </div>
                                <div class="d-flex justify-content-center pt-3 ">
                                    <button type="submit" class="btn btn-warning ">Submit form</button>
                                </div>
                  </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="/js/validateForm.js" >
     </script>
