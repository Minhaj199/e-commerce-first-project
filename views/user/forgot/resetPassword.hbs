{{!-- password and conform password entering page --}}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto&family=Sonsie+One&family=Sorts+Mill+Goudy&display=swap"
        rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/forgot/reset.css" />
</head>

<body>
  <div class="container-fluid ">
     {{>userMainHeader}}
    <div class="row justify-content-center mt-5 mb-5">
      <!-- Left Image Section -->
      <div class="col-md-8 col-lg-6 reset-container shadow">
        <div class="form-section mx-auto">
          <a href="/user/log-in" class="mb-3 d-inline-block text-dark"><strong>&lt; Back</strong></a>
          <h3 class="mb-3">Reset Password</h3>
          <p class="text-muted">We will help you reset your password. Please enter your new password below.</p>

          <form action="/user/log-in/passwordReseted/{{globalEmail}}?_method=PUT" method="post"
            onsubmit="return validatePassword()">
            <input type="password" class="form-control mb-3" placeholder="Enter Password" name="password"
              id="form3Example10" required />
            <input type="password" class="form-control mb-4" placeholder="Confirm Password" name="cPassword"
              id="form3Example11" required />
            <button type="submit" class="btn btn-primary btn-block">Send</button>
          </form>
        </div>
      </div>
    </div>
     {{>footer}} 
  </div>

  <!-- Scripts -->
  <script src="/js/validateForm.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"></script>
</body>


</html>